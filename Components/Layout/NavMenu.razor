<MudDrawer @bind-Open="Open" Variant="DrawerVariant.Responsive">
	<MudDrawerHeader LinkToIndex Class="pa-0">
		<MudImage Src="images/logo.png" />
	</MudDrawerHeader>
	<MudNavMenu>
		<MudNavLink Href="quick-play" Icon="@Icons.Material.Filled.Bolt" IconColor="Color.Warning">@Localizer["QuickPlay"]</MudNavLink>
		<MudNavLink Href="tournaments" Icon="@Icons.Material.Filled.EmojiEvents" IconColor="Color.Warning">@Localizer["Tournaments"]</MudNavLink>
		<MudNavLink Href="leaderboards" Icon="@Icons.Material.Filled.Leaderboard" IconColor="Color.Warning">@Localizer["Leaderboards"]</MudNavLink>
		<MudNavLink Href="how-to-play" Icon="@Icons.Material.Filled.MenuBook" IconColor="Color.Warning">@Localizer["HowToPlay"]</MudNavLink>
		<MudNavLink Href="help" Icon="@Icons.Material.Filled.QuestionMark" IconColor="Color.Warning">@Localizer["Help"]</MudNavLink>
	</MudNavMenu>
</MudDrawer>

@code {
	[Parameter]
	public bool Open { get; set; }
}