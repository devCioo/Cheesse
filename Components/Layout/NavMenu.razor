<MudDrawer @bind-Open="Open" Variant="DrawerVariant.Responsive">
	<MudDrawerHeader LinkToIndex Class="pa-0">
		<MudImage Src="images/logo.png" />
	</MudDrawerHeader>
	<MudNavMenu Rounded Margin="Margin.Dense" Color="Color.Secondary" Class="pa-2">
		<MudNavLink Href="quick-play" Icon="@Icons.Material.Filled.Bolt">@Localizer["QuickPlay"]</MudNavLink>
		<MudNavLink Href="tournaments" Icon="@Icons.Material.Filled.EmojiEvents">@Localizer["Tournaments"]</MudNavLink>
		<MudNavLink Href="leaderboards" Icon="@Icons.Material.Filled.Leaderboard">@Localizer["Leaderboards"]</MudNavLink>
		<MudNavLink Href="how-to-play" Icon="@Icons.Material.Filled.MenuBook">@Localizer["HowToPlay"]</MudNavLink>
		<MudNavLink Href="help" Icon="@Icons.Material.Filled.QuestionMark">@Localizer["Help"]</MudNavLink>
	</MudNavMenu>
</MudDrawer>

@code {
	[Parameter]
	public bool Open { get; set; }
}