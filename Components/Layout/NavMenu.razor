<MudDrawer @bind-Open="Open" Variant="DrawerVariant.Responsive">
	<MudDrawerHeader LinkToIndex Class="pa-0">
		<MudImage Src="images/logo.png" />
	</MudDrawerHeader>
	<MudNavMenu>
		<MudNavLink Href="quick-play" Icon="@Icons.Material.Filled.Bolt" IconColor="Color.Warning">Quick Play</MudNavLink>
		<MudNavLink Href="tournaments" Icon="@Icons.Material.Filled.EmojiEvents" IconColor="Color.Warning">Tournaments</MudNavLink>
		<MudNavLink Href="leaderboards" Icon="@Icons.Material.Filled.Leaderboard" IconColor="Color.Warning">Leaderboards</MudNavLink>
		<MudNavLink Href="how-to-play" Icon="@Icons.Material.Filled.MenuBook" IconColor="Color.Warning">How to play</MudNavLink>
		<MudNavLink Href="help" Icon="@Icons.Material.Filled.QuestionMark" IconColor="Color.Warning">Help</MudNavLink>
	</MudNavMenu>
</MudDrawer>

@code {
	[Parameter]
	public bool Open { get; set; }
}