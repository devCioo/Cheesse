@inherits LayoutComponentBase

<MudThemeProvider Theme="MudTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
     <NavBar OnMenuToggle="ToggleMenu" />
     <NavMenu Open="Open" />
     <MudMainContent>
         @Body
     </MudMainContent>
</MudLayout>

<MudAlert Severity="Severity.Error" Variant="Variant.Filled" id="blazor-error-ui">
    <MudText>An unhandled error has occured.</MudText>
    <MudLink Href="" Class="reload">Reload</MudLink>
    <MudLink Class="dismiss">🗙</MudLink>
</MudAlert>

@code {
    private MudTheme MudTheme = new MudTheme
    {
        Typography = new Typography
        {
            Default = new Default
            {
                FontFamily = new[] { "Lexend" }
            }
        }
    };

    private bool Open { get; set; } = true;

    private void ToggleMenu() => Open = !Open;
}