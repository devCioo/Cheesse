@page "/quick-play/friends"
@attribute [Authorize]

<MudContainer Class="mt-16">
	<MudGrid Justify="Justify.Center" Class="mt-8">
		<MudItem xs="12" sm="5" md="5" Class="d-flex justify-end">
			<MudCard Style="width: 250px;">
				<MudCardHeader>
					<CardHeaderAvatar>
						<MudAvatar Color="Color.Warning">P</MudAvatar>
					</CardHeaderAvatar>
					<CardHeaderContent>
						<MudText Typo="Typo.body1">Player</MudText>
						<MudText Typo="Typo.body2">@Localizer["Rank"]: @Localizer["Challenger"], @Localizer["Level"]: 1</MudText>
					</CardHeaderContent>
				</MudCardHeader>
				<MudPaper Elevation="0" Height="100px" Class="ps-4">
					<MudText Typo="Typo.body2">@Localizer["Wins"]: 7</MudText>
					<MudText Typo="Typo.body2">@Localizer["Draws"]: 2</MudText>
					<MudText Typo="Typo.body2">@Localizer["Defeats"]: 1</MudText>
				</MudPaper>
				<MudCardActions>
					<MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Default" />
				</MudCardActions>
			</MudCard>
		</MudItem>
		<MudItem xs="12" sm="2" md="2" Class="d-flex justify-center">
			<MudText Typo="Typo.h2">vs</MudText>
		</MudItem>
		<MudItem xs="12" sm="5" md="5" Class="d-flex justify-start">
			<MudCard Style="width: 250px;">
				<MudCardHeader>
					<CardHeaderAvatar>
						<MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Pulse" Width="40px" Height="40px" />
					</CardHeaderAvatar>
					<CardHeaderContent>
						<MudSkeleton Animation="Animation.Pulse" Width="40%" />
						<MudSkeleton Animation="Animation.Pulse" Width="100%" />
					</CardHeaderContent>
				</MudCardHeader>
				<MudSkeleton SkeletonType="SkeletonType.Rectangle" Animation="Animation.Pulse" Height="100px" />
				<MudCardActions>
					<MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Pulse" Width="30px" Height="30px" Class="ml-2 mb-2" />
				</MudCardActions>
			</MudCard>
		</MudItem>
		<MudItem xs="12">
			<MudPaper Width="300px">
				<MudList T="string">
					<MudListSubheader>
						@Localizer["Invite"]
					</MudListSubheader>
					<MudListItem Icon="@Icons.Material.Filled.Person" IconColor="Color.Success">
						<MudStack Row Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
							<MudText Typo="Typo.body1">Friend 1</MudText>
							<MudIconButton Icon="@Icons.Material.Filled.Mail" Class="pa-0" />
						</MudStack>
					</MudListItem>
					<MudListItem Icon="@Icons.Material.Filled.Person" IconColor="Color.Success">
						<MudStack Row Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
							<MudText Typo="Typo.body1">Friend 2</MudText>
							<MudIconButton Icon="@Icons.Material.Filled.Mail" Class="pa-0" />
						</MudStack>
					</MudListItem>
					<MudListItem Icon="@Icons.Material.Filled.Person" IconColor="Color.Error">
						<MudStack Row Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
							<MudText Typo="Typo.body1">Friend 3</MudText>
							<MudIconButton Icon="@Icons.Material.Filled.Mail" Class="pa-0" />
						</MudStack>
					</MudListItem>
				</MudList>
			</MudPaper>
		</MudItem>
	</MudGrid>
</MudContainer>

