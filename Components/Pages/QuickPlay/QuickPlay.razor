@page "/quick-play"
@using Cheesse.Components.Boards
@using Cheesse.Games

<PageTitle>Quick Play</PageTitle>

<MudContainer Class="mt-16">
	@if (Mode == null)
	{
		<MudText Typo="Typo.h3" Align="Align.Center" GutterBottom>Choose game mode</MudText>
		<MudGrid Justify="Justify.Center" Class="mt-8">
			<MudItem xs="12" sm="6" md="4" Class="d-flex justify-center">
				<MudButton OnClick="@(() => Mode = GameMode.Online)" Class="pa-8">
					<ChildContent>
						<MudCard Elevation="25" Class="rounded-lg pb-4" Style="width: 250px; height: 250px;">
							<MudCardHeader>
								<CardHeaderContent>
									<MudText Typo="Typo.h5" Align="Align.Center">Find opponent</MudText>
								</CardHeaderContent>
							</MudCardHeader>
							<MudCardContent>
								<MudIcon Icon="@Icons.Material.Filled.PersonSearch" Color="Color.Info" Style="width: 100px; height: 100px;" />
							</MudCardContent>
						</MudCard>
					</ChildContent>
				</MudButton>
			</MudItem>
			<MudItem xs="12" sm="6" md="4" Class="d-flex justify-center">
				<MudButton OnClick="@(() => Mode = GameMode.Bots)" Class="pa-8">
					<ChildContent>
						<MudCard Elevation="25" Class="rounded-lg pb-4" Style="width: 250px; height: 250px;">
							<MudCardHeader>
								<CardHeaderContent>
									<MudText Typo="Typo.h5" Align="Align.Center">Play with bot</MudText>
								</CardHeaderContent>
							</MudCardHeader>
							<MudCardContent>
								<MudIcon Icon="@Icons.Material.Filled.SmartToy" Color="Color.Default" Style="width: 100px; height: 100px;" />
							</MudCardContent>
						</MudCard>
					</ChildContent>
				</MudButton>
			</MudItem>
			<MudItem xs="12" sm="6" md="4" Class="d-flex justify-center">
				<MudButton OnClick="@(() => Mode = GameMode.Friend)" Class="pa-8">
					<ChildContent>
						<MudCard Elevation="25" Class="rounded-lg pb-4" Style="width: 250px; height: 250px;">
							<MudCardHeader>
								<CardHeaderContent>
									<MudText Typo="Typo.h5" Align="Align.Center">Play with friend</MudText>
								</CardHeaderContent>
							</MudCardHeader>
							<MudCardContent>
								<MudIcon Icon="@Icons.Material.Filled.PersonAddAlt1" Color="Color.Secondary" Style="width: 100px; height: 100px;" />
							</MudCardContent>
						</MudCard>
					</ChildContent>
				</MudButton>
			</MudItem>
			<MudItem xs="12" sm="6" md="4" Class="d-flex justify-center">
				<MudButton OnClick="@(() => Mode = GameMode.Local)" Class="pa-8">
					<ChildContent>
						<MudCard Elevation="25" Class="rounded-lg pb-4" Style="width: 250px; height: 250px;">
							<MudCardHeader>
								<CardHeaderContent>
									<MudText Typo="Typo.h5" Align="Align.Center">Play locally</MudText>
								</CardHeaderContent>
							</MudCardHeader>
							<MudCardContent>
								<MudIcon Icon="@Icons.Material.Filled.People" Color="Color.Tertiary" Style="width: 100px; height: 100px;" />
							</MudCardContent>
						</MudCard>
					</ChildContent>
				</MudButton>
			</MudItem>
			<MudItem xs="12" sm="6" md="4" Class="d-flex justify-center">
				<MudButton OnClick="@(() => Mode = GameMode.Challenge)" Class="pa-8">
					<ChildContent>
						<MudCard Elevation="25" Class="rounded-lg pb-4" Style="width: 250px; height: 250px;">
							<MudCardHeader>
								<CardHeaderContent>
									<MudText Typo="Typo.h5" Align="Align.Center">Challenges</MudText>
								</CardHeaderContent>
							</MudCardHeader>
							<MudCardContent>
								<MudIcon Icon="@Icons.Material.Filled.Flag" Color="Color.Primary" Style="width: 100px; height: 100px;" />
							</MudCardContent>
						</MudCard>
					</ChildContent>
				</MudButton>
			</MudItem>
		</MudGrid>
	}
	else
	{
		<MudGrid>
			<MudItem xs="12" Class="d-flex justify-end">
				<MudIconButton OnClick="@(() => Mode = null)" Icon="@Icons.Material.Filled.KeyboardReturn" Size="Size.Medium" Color="Color.Warning" Class="border-4 border-solid mud-border-warning" />
			</MudItem>
			<MudItem xs="12">
				@switch (Mode)
				{
					case GameMode.Online:
						<OnlineSearch />
						break;
					case GameMode.Bots:
						<BotSelection />
						break;
					case GameMode.Friend:
						<FriendInvitation />
						break;
					case GameMode.Local:
						<DefaultBoard />
						break;
					case GameMode.Challenge:
						<ChallengesView />
						break;
				}
			</MudItem>
		</MudGrid>
	}
</MudContainer>

@code {
	private GameMode? Mode { get; set; }
}