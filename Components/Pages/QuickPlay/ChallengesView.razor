<MudGrid Justify="Justify.Center" Class="mt-8">
	<MudItem Class="d-flex justify-center">
		<MudButton Class="ma-4 pa-4">
			<ChildContent>
				<MudBadge Origin="Origin.TopRight" Overlap Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success">
					<MudCard Elevation="25" Class="rounded-lg pb-4" Style="width: 250px; height: 250px;">
						<MudCardHeader>
							<CardHeaderContent>
								<MudText Typo="Typo.h5" Align="Align.Center">Challenge 1</MudText>
							</CardHeaderContent>
						</MudCardHeader>
						<MudCardContent>
							<MudText Typo="Typo.h6">Pawn madness</MudText>
							<MudText Typo="Typo.body2">"You either come back with a shield or on it"</MudText>
						</MudCardContent>
						<MudCardActions>
							<MudStack Row Spacing="1" AlignItems="AlignItems.Center">
								<MudText Typo="Typo.body2">Difficulty:</MudText>
								<MudIcon Icon="@Icons.Material.Rounded.SentimentVerySatisfied" Color="Color.Success" />
							</MudStack>
						</MudCardActions>
					</MudCard>
				</MudBadge>
			</ChildContent>
		</MudButton>
	</MudItem>
	<MudItem Class="d-flex justify-center">
		<MudButton Class="ma-4 pa-4">
			<ChildContent>
				<MudBadge Origin="Origin.TopRight" Overlap Color="Color.Default">
					<MudCard Elevation="25" Class="rounded-lg pb-4" Style="width: 250px; height: 250px;">
						<MudCardHeader>
							<CardHeaderContent>
								<MudText Typo="Typo.h5" Align="Align.Center">Challenge 2</MudText>
							</CardHeaderContent>
						</MudCardHeader>
						<MudCardContent>
							<MudText Typo="Typo.h6">Honeymoon</MudText>
							<MudText Typo="Typo.body2">"Let the couple spend their time together alone"</MudText>
						</MudCardContent>
						<MudCardActions>
							<MudStack Row Spacing="1" AlignItems="AlignItems.Center">
								<MudText Typo="Typo.body2">Difficulty:</MudText>
								<MudIcon Icon="@Icons.Material.Rounded.SentimentNeutral" Color="Color.Warning" />
							</MudStack>
						</MudCardActions>
					</MudCard>
				</MudBadge>
			</ChildContent>
		</MudButton>
	</MudItem>
	<MudItem Class="d-flex justify-center">
		<MudButton Class="ma-4 pa-4">
			<ChildContent>
				<MudBadge Origin="Origin.TopRight" Overlap Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success">
					<MudCard Elevation="25" Class="rounded-lg pb-4" Style="width: 250px; height: 250px;">
						<MudCardHeader>
							<CardHeaderContent>
								<MudText Typo="Typo.h5" Align="Align.Center">Challenge 3</MudText>
							</CardHeaderContent>
						</MudCardHeader>
						<MudCardContent>
							<MudText Typo="Typo.h6">Lucky Luke</MudText>
							<MudText Typo="Typo.body2">"I'm shooting faster than my shadow"</MudText>
						</MudCardContent>
						<MudCardActions>
							<MudStack Row Spacing="1" AlignItems="AlignItems.Center">
								<MudText Typo="Typo.body2">Difficulty:</MudText>
								<MudIcon Icon="@Icons.Material.Sharp.SentimentVeryDissatisfied" Color="Color.Error" />
							</MudStack>
						</MudCardActions>
					</MudCard>
				</MudBadge>
			</ChildContent>
		</MudButton>
	</MudItem>
</MudGrid>

