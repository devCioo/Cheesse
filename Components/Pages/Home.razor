@page "/"

<PageTitle>@Localizer["Home"]</PageTitle>

<MudContainer Class="mt-16">
	<MudGrid Class="mt-8">
		<MudItem xs="12" sm="6" md="4">
			<MudCard Elevation="25" Class="rounded-lg pb-4" Style="height: 400px;">
				<MudCardHeader>
					<CardHeaderContent>
						<MudText Typo="Typo.h5" Align="Align.Center">@Localizer["Welcome"], [Player]</MudText>
					</CardHeaderContent>
				</MudCardHeader>
				<MudCardContent>
					<MudStack Row Justify="Justify.SpaceBetween">
						<MudText Typo="Typo.h6">@Localizer["Level"]:</MudText>
						<MudText Typo="Typo.h6">1 (100/250 @Localizer["ExperiencePoints"])</MudText>
					</MudStack>
					<MudStack Row Justify="Justify.SpaceBetween">
						<MudText Typo="Typo.h6">@Localizer["Rank"]:</MudText>
						<MudText Typo="Typo.h6">@Localizer["Challenger"] (1800)</MudText>
					</MudStack>
					<MudStack Row Justify="Justify.SpaceBetween">
						<MudText Typo="Typo.h6">@Localizer["Wins"]:</MudText>
						<MudText Typo="Typo.h6">7</MudText>
					</MudStack>
					<MudStack Row Justify="Justify.SpaceBetween">
						<MudText Typo="Typo.h6">@Localizer["Draws"]:</MudText>
						<MudText Typo="Typo.h6">2</MudText>
					</MudStack>
					<MudStack Row Justify="Justify.SpaceBetween">
						<MudText Typo="Typo.h6">@Localizer["Defeats"]:</MudText>
						<MudText Typo="Typo.h6">1</MudText>
					</MudStack>
				</MudCardContent>
			</MudCard>
		</MudItem>
		<MudItem xs="12" sm="6" md="4">
			<MudCard Elevation="25" Class="rounded-lg pb-4" Style="height: 400px;">
				<MudCardHeader>
					<CardHeaderContent>
						<MudText Typo="Typo.h5" Align="Align.Center">@Localizer["Play"]</MudText>
					</CardHeaderContent>
				</MudCardHeader>
				<MudCardContent Class="d-flex justify-center">
					<MudButton Style="border-radius: 50%;">
						<ChildContent>
							<MudIcon Icon="@Icons.Material.Filled.PlayCircle" Size="Size.Large" Style="width: 250px; height: 250px;" />
						</ChildContent>
					</MudButton>
				</MudCardContent>
			</MudCard>
		</MudItem>
		<MudItem xs="12" sm="6" md="4">
			<MudCard Elevation="25" Class="rounded-lg pb-4" Style="height: 500px;">
				<MudCardHeader>
					<CardHeaderContent>
						<MudText Typo="Typo.h5" Align="Align.Center">@Localizer["Missions"]</MudText>
					</CardHeaderContent>
				</MudCardHeader>
				<MudCardContent>
					<MudList T="string">
						<MudListItem Text="@($"{Localizer["Tutorial"]} II (1/2)")" SecondaryText="@($"{Localizer["Difficulty"]}: {Localizer["DifficultyEasy"]}")" Icon="@Icons.Material.Filled.CheckCircleOutline" IconColor="Color.Default" Expanded>
							<NestedList>
								<MudListItem Text="@($"{Localizer["MissionPlay5Games"]} (3/5))")" Icon="@Icons.Material.Filled.CheckCircleOutline" IconColor="Color.Default" />
								<MudListItem Text="@($"{Localizer["MissionWin1Game"]} (1/1)")" Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success" />
							</NestedList>
						</MudListItem>
						<MudListItem Text="@($"{Localizer["MissionSpend1000Coins"]} (540/1000)")" SecondaryText="@($"{Localizer["Difficulty"]}: {Localizer["DifficultyMedium"]}")" Icon="@Icons.Material.Filled.CheckCircleOutline" IconColor="Color.Default" />
						<MudListItem Text="@($"{Localizer["Win1GameLessThan50Moves"]} (0/1)")" SecondaryText="@($"{Localizer["Difficulty"]}: {Localizer["DifficultyHard"]}")" Icon="@Icons.Material.Filled.CheckCircleOutline" IconColor="Color.Default" />
					</MudList>
				</MudCardContent>
			</MudCard>
		</MudItem>
		<MudItem xs="12" sm="6" md="4">
			<MudCard Elevation="25" Class="rounded-lg pb-4" Style="height: 600px;">
				<MudCardHeader>
					<CardHeaderContent>
						<MudText Typo="Typo.h5" Align="Align.Center">@Localizer["LastGames"]</MudText>
					</CardHeaderContent>
				</MudCardHeader>
				<MudCardContent>
					<MudList T="string">
						<MudListItem Text="@Localizer["Ranked"]" SecondaryText="08.11.2024 19:05" Icon="@Icons.Material.Filled.EmojiEvents" IconColor="Color.Success" />
						<MudListItem Text="@Localizer["Ranked"]" SecondaryText="08.11.2024 21:14" Icon="@Icons.Material.Filled.EmojiEvents" IconColor="Color.Error" />
						<MudListItem Text="@Localizer["Normal"]" SecondaryText="08.11.2024 21:31" Icon="@Icons.Material.Filled.EmojiEvents" IconColor="Color.Success" />
					</MudList>
				</MudCardContent>
			</MudCard>
		</MudItem>
	</MudGrid>
</MudContainer>